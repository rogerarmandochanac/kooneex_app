<ViajeEnCursoMotoScreen>:
    name:"viaje_en_curso_moto"

    MDFloatLayout:
        md_bg_color: 0.9686, 0.5765, 0.1176, 1

        # --- MAPA ---
        MapView:
            id: mapa
            zoom: 15
            lat: 20.13730
            lon: -90.17490
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}
        
        MDFloatingActionButton:
            icon: "check"
            md_bg_color: 0, 0.7, 0, 1
            pos_hint: {"right": 0.95, "y": 0.05}
            on_release: root.marcar_completado()
        
