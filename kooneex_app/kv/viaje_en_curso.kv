<ViajeEnCursoScreen>:
    name: "viaje_en_curso"
    
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                orientation: "vertical"
                spacing: "40dp"
                adaptive_height: True
                size_hint_x: .9

                MDSpinner:
                    id: _spinner_en_curso
                    size_hint: None, None
                    size: "46dp", "46dp"
                    pos_hint: {"center_x": .5}
                    active: True
                    opacity: 1
                    color: 0.9686, 0.5765, 0.1176, 1

                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"

                    FloatLayout:
                        id: anim_container
                        size_hint: 1, None
                        height: dp(120)

                        Image:
                            id: img_en_curso
                            source: "assets/moto_koonex.png"
                            size_hint: None, None
                            size: dp(100), dp(100)
                            opacity: 1
                            pos_hint: {"center_y": 0.5}

                MDLabel:
                    id: info_label
                    text: "Cargando informaci√≥n del viaje..."
                    halign: "center"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]
                    markup:True

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "10dp"
            size_hint_y: None
            height: "100dp"
            pos_hint: {"center_x": 0.5, "y": 0.05}

            Button:
                id: btn_completar
                text: "Marcar viaje como completado"
                size_hint_x: .8
                pos_hint: {"center_x": .5}
                size_hint_y: None
                height: dp(50)
                background_normal: ""
                background_down: ""
                background_color: 0, 0, 0, 0 
                color: 1, 1, 1, 1  # texto blanco
                canvas.before:
                    Color:
                        rgba: (0.85, 0.45, 0.05, 1) if self.state == "down" else (0.9686, 0.5765, 0.1176, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15, 15, 15, 15]
                
                on_release: root.marcar_completado()