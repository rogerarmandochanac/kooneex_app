<ViajeEnCursoScreen>:
    name: "viaje_en_curso"
    
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                orientation: "vertical"
                spacing: "20dp"
                adaptive_height: True
                size_hint_x: .9

                MDSpinner:
                    size_hint: None, None
                    size: "46dp", "46dp"
                    pos_hint: {"center_x": .5}
                    active: True
                    color: 0.9686, 0.5765, 0.1176, 1

                MDLabel:
                    id: info_label
                    text: "Cargando informaci√≥n del viaje..."
                    halign: "center"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "10dp"
            size_hint_y: None
            height: "100dp"
            pos_hint: {"center_x": 0.5, "y": 0.05}

            MDRaisedButton:
                id: btn_completar
                text: "Marcar viaje como completado"
                md_bg_color: 0.2, 0.2, 0.2, 1
                text_color: 1, 1, 1, 1
                size_hint_x: 0.9
                size_hint_y: None
                height: "60dp"
                pos_hint: {"center_x": 0.5}
                elevation: 2
                on_release: root.marcar_completado()