<LoginMDTextField@MDTextField>:
    fill_color: 1, 1, 1, 0.25
    text_color: 1, 1, 1, 1
    hint_text_color: 1, 1, 1, 0.8
    icon_right_color: 1, 1, 1, 1
    line_color_focus: 1, 1, 1, 1
    font_name: "Poppins"
    mode: "fill"
    
<LoginScreen>:
    name: "login" #Nombre del screen
    show_password: False 
    background_orange_color : 0.9686, 0.5765, 0.1176, 1 #Color naranja
    font_white_color : 1, 1, 1, 1 #Color blanco
    font_style : "Poppins"

    MDFloatLayout:
        md_bg_color: root.background_orange_color

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                orientation: "vertical"
                spacing: "35dp"
                padding: "40dp"
                size_hint: 0.9, None
                height: self.minimum_height

                # üîù HEADER
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "15dp"
                    Image:
                        source: "assets/logo_blanco.png"
                        size_hint: (1, None)
                        height: "120dp"

                    MDLabel:
                        text: "Iniciar Sesi√≥n"
                        halign: "center"
                        bold: True
                        font_style: "H5"
                        theme_text_color: "Custom"
                        text_color: root.font_white_color
                        size_hint_y: None
                        height: self.texture_size[1]

                # üßæ FORMULARIO
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "15dp"
                    LoginMDTextField:
                        id: txt_username
                        hint_text: "Usuario"
                        icon_right: "account"
                        on_text: root.username = self.text

                    LoginMDTextField:
                        id: txt_password
                        hint_text: "Contrase√±a"
                        password: True
                        icon_right: "eye"
                        on_text: root.password = self.text

                # üîò BOTONES
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "15dp"
                    Button:
                        text: "Ingresar"
                        size_hint_y: None
                        height: dp(45)
                        size_hint_x: 1
                        font_name: root.font_style
                        color: 0.9686, 0.5765, 0.1176, 1
                        background_normal: ""
                        background_down: ""
                        background_color: 0, 0, 0, 0

                        canvas.before:
                            Color:
                                rgba: (0.95, 0.95, 0.95, 1) if self.state == "down" else (1, 1, 1, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [25, 25, 25, 25]

                        canvas.after:
                            Color:
                                rgba: 0.9686, 0.5765, 0.1176, 1
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 25)

                        on_release: root.login()

                    Button:
                        text: "Crear Cuenta"
                        size_hint_y: None
                        height: dp(45)
                        size_hint_x: 1
                        font_name: root.font_style
                        color: 1, 1, 1, 1
                        background_normal: ""
                        background_down: ""
                        background_color: 0, 0, 0, 0

                        canvas.before:
                            Color:
                                rgba: (0.9, 0.5, 0.1, 1) if self.state == "down" else (0.85, 0.45, 0.05, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [25, 25, 25, 25]

                        on_release: root.manager.current = "registro"

                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "30dp"

                    MDLabel:
                        id: mensaje_label
                        text: root.mensaje
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: root.font_white_color
                        font_name: root.font_style