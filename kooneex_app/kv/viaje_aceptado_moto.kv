<ViajeAceptadoMotoScreen>:
    name: "viaje_aceptado_moto"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1  # fondo blanco

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)
                size_hint: None, None
                width: dp(320)
                height: self.minimum_height
                padding: dp(25)

                Image:
                    source: "assets/moto_koonex.png"
                    size_hint: None, None
                    size: dp(90), dp(90)
                    pos_hint: {"center_x": .5}
                    allow_stretch: True
                    keep_ratio: True

                MDLabel:
                    id: info_label
                    text: "Cargando viaje en curso..."
                    halign: "center"
                    font_style: "H6"
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1  # gris oscuro elegante
                    size_hint_y: None
                    height: self.texture_size[1]

                Widget:
                    size_hint_y: None
                    height: dp(10)

                Button:
                    text: "Iniciar viaje"
                    size_hint_y: None
                    height: dp(50)

                    font_name: "Poppins"
                    color: 1, 1, 1, 1  # texto blanco

                    background_normal: ""
                    background_down: ""
                    background_color: 0, 0, 0, 0

                    canvas.before:
                        Color:
                            rgba: (0.85, 0.45, 0.05, 1) if self.state == "down" else (0.9686, 0.5765, 0.1176, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25, 25, 25, 25]

                    on_release: root.iniciar_viaje()