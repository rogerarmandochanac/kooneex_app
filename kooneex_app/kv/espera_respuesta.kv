<EsperaRespuestaScreen>:
    MDFloatLayout:

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(16)
                size_hint: None, None
                width: dp(300)
                height: self.minimum_height
                padding: dp(20)

                # üîÑ Spinner marca
                MDSpinner:
                    size_hint: None, None
                    size: "46dp", "46dp"
                    pos_hint: {"center_x": .5}
                    active: True
                    color: 0.9686, 0.5765, 0.1176, 1

                # üßæ T√≠tulo
                MDLabel:
                    text: "Oferta pendiente"
                    halign: "center"
                    font_style: "H6"
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1]

                # üìÑ Descripci√≥n
                MDLabel:
                    text: "Has enviado una oferta para el viaje."
                    halign: "center"
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Esperando respuesta del pasajero..."
                    halign: "center"
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]

                # ‚ùå Bot√≥n minimalista sin sombra
                Button:
                    text: "Cancelar oferta"
                    size_hint_y: None
                    height: dp(42)
                    size_hint_x: .9
                    pos_hint: {"center_x": 0.5}

                    background_normal: ""
                    background_down: ""
                    background_color: 0, 0, 0, 0

                    color: 1, 1, 1, 1

                    canvas.before:
                        Color:
                            rgba: (0.75, 0.2, 0.1, 1) if self.state == "down" else (0.85, 0.25, 0.15, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20, 20, 20, 20]

                    on_release: root.rechazar_oferta()