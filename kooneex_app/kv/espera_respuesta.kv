<EsperaRespuestaScreen>
    FloatLayout:

        MDBoxLayout:
            orientation: "vertical"
            spacing: "16dp"
            size_hint: None, None
            width: "300dp"
            height: self.minimum_height
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Oferta pendiente"
                font_style: "H6"
                bold: True
                theme_text_color: "Primary"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "12dp"
                adaptive_height: True
                pos_hint: {"center_x": .5}

                MDIconButton:
                    icon: "clock-outline"
                    theme_text_color: "Custom"
                    text_color: 0.15, 0.15, 0.15, 1
                    disabled: True
                    icon_size: "36sp"

                MDLabel:
                    text: "Has enviado una oferta para el viaje"
                    font_style: "Body1"
                    theme_text_color: "Primary"
                    valign: "middle"

            MDSeparator:

            MDLabel:
                text: "Esperando respuesta del pasajero..."
                font_style: "Body2"
                theme_text_color: "Secondary"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            MDRaisedButton:
                text: "Cancelar oferta"
                md_bg_color: 0.85, 0.25, 0.15, 1
                text_color: 1, 1, 1, 1
                elevation: 0
                pos_hint: {"center_x": .5}
                on_release:root.rechazar_oferta()
