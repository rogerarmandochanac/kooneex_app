<PendientesScreen>:
    # Pantalla que carga los viajes pendientes en la pantalla del mototaxista
    name: 'pendientes'
    MDFloatLayout:
        md_bg_color: 0.9686, 0.5765, 0.1176, 1  # #F7931E
        BoxLayout:
            orientation: "vertical"
            padding: 10
            spacing: 10

            MDLabel:
                text: "Viajes Pendientes"
                font_size: 22
                bold: True
                size_hint_y: None
                height: 40
                color: 1, 1, 0, 1

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: viajes_container
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 10
            MDLabel:
                id: notificacion_label
                text: ""
                size_hint_y: None
                height: 30
                color: 0, 1, 0, 1
                halign: "center"