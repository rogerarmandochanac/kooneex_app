<TarifaScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)

        FloatLayout:

            RecycleView:
                id: rv_ofertas
                viewclass: "TarifaItem"
                bar_width: dp(4)

                RecycleBoxLayout:
                    orientation: "vertical"
                    default_size: None, dp(190)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(12)
            
            MDLabel:
                text: "Aun no hay ofertas disponibles"
                halign: "center"
                valign: "middle"
                text_size: self.size
                font_style: "Subtitle1"
                theme_text_color: "Secondary"
                text_bold: True

                # ðŸ‘‡ solo se muestra cuando NO hay data
                opacity: 0 if rv_ofertas.data else 1

        MDLabel:
            id: mensaje_tarifas
            text: ""
            halign: "center"
            theme_text_color: "Error"
            size_hint_y: None
            height: self.texture_size[1]
    
    MDFloatingActionButton:
        icon: "close"
        md_bg_color: 0.9 , 0.0, 0.0 , 1
        pos_hint: {"right": 0.95, "y": 0.05}
        on_release: root.eliminar_viaje()